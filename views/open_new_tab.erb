<div class="container">
  <div class="row">
    <div id="flash-messages" class="col-12">
    </div>
  </div>
  <div class="row">
    <div id="content" class="col-12">
      <div class="container">
        <div class="row">
          <div class="col-sm-12">
            <div id="alert" class="alert alert-primary">
              <p><strong id="msg">New tab will be opened in 3 seconds!</strong></p>
            </div>
          </div>
        </div>
      </div>
      <script>
          document.title = "New tab will be opened in 3 seconds!";
          setTimeout(function openNewTab() {
              var win = window.open("/new_tab", '_blank');
              win.focus();
              document.getElementById("alert").remove();
              document.getElementById("msg").innerText = "Check the new tab!";
          }, 3000);
      </script>
    </div>
  </div>
</div>
