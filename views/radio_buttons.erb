<div class="row">
  <div id="content" class="large-12 columns">


    <div class="container">
      <h3 class="h3">Radio buttons</h3>
      <br>
      <h6>Select your favorite color:</h6>

      <form>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" id="blue" name="color" checked="">
          <label class="form-check-label" for="blue">Blue</label>
        </div>
        <br>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" id="red" name="color">
          <label class="form-check-label" for="red">Red</label>
        </div>
        <br>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" id="yellow" name="color">
          <label class="form-check-label" for="yellow">Yellow</label>
        </div>
        <br>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" id="black" name="color">
          <label class="form-check-label" for="black">Black</label>
        </div>
        <br>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" id="green" name="color">
          <label class="form-check-label" for="green">Green</label>
        </div>
        <!--        <br>-->
      </form>
      <!--      <br>-->
      <h6>Select your favorite sport:</h6>

      <form>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" id="basketball" name="sport">
          <label class="form-check-label" for="basketball">Basketball</label>
        </div>
        <br>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" id="football" name="sport">
          <label class="form-check-label" for="football">Football</label>
        </div>
        <br>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" id="hockey" name="sport">
          <label class="form-check-label" for="hockey">Hockey</label>
        </div>
        <br>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" id="soccer" name="sport">
          <label class="form-check-label" for="soccer">Soccer</label>
        </div>
      </form>

     <!--- added custom enable disable checkbox-->

        <div>
          <div class="mb-3">Do you like the site?</div>
          <div class="custom-control custom-radio custom-control-inline">
            <input type="radio" id="yesRadio" name="like" class="custom-control-input">
            <label class="custom-control-label" for="yesRadio">Yes</label>
          </div>
          <div class="custom-control custom-radio custom-control-inline">
            <input type="radio" id="impressiveRadio" name="like" class="custom-control-input">
            <label class="custom-control-label" for="impressiveRadio">Impressive</label>
          </div>
          <div class="custom-control disabled custom-radio custom-control-inline">
            <input type="radio" id="noRadio" disabled="" name="like" class="custom-control-input disabled">
            <label class="custom-control-label disabled" for="noRadio">No</label>
          </div>
        </div>



    </div>

  </div>
</div>



