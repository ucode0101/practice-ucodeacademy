<style>
    body {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        margin: 0;
    }
    .example {
        text-align: center;
        margin-bottom: 20px;
    }
    #hot-spot {
        display: inline-block;
        border-style: dashed;
        border-width: 5px;
        width: 250px;
        height: 150px;
    }
    .text-center {
        text-align: center;
    }
    #rightClickMessage {
        display: none;
        color: green;
        margin-top: 20px;
    }
    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .btn {
        margin-bottom: 20px;
    }
</style>

<body>
<div class="container">
  <div class="example">
    <h3>Context Menu</h3>
    <p>Context menu items are custom additions that appear in the right-click menu.</p>
    <p>Right-click in the box below to see one called 'the-internet'. When you click it, it will trigger a JavaScript alert.</p>
    <div id="hot-spot" oncontextmenu="displayMessage()"></div>
  </div>

  <h3 class="text-center">Right Click Example</h3>
  <button id="rightClickBtn" type="button" class="btn btn-primary">Right Click Me</button>
  <p id="rightClickMessage">You have done a right click</p>
</div>

<script>
    // Display an alert message when right-clicking in the hot-spot div
    function displayMessage() {
        window.alert('You selected a context menu');
    }

    document.addEventListener('DOMContentLoaded', (event) => {
        const button = document.getElementById('rightClickBtn');
        const message = document.getElementById('rightClickMessage');

        // Add event listener for right-click on the button
        button.addEventListener('contextmenu', (e) => {
            e.preventDefault(); // Prevent the default context menu
            message.style.display = 'block'; // Show the message
        });
    });
</script>