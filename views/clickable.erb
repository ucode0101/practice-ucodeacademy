<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Buttons with Countdown</title>
  <style>
      .button-like {
          display: inline-block;
          padding: 10px 20px;
          margin: 5px;
          border: 1px solid #000;
          border-radius: 5px;
          background-color: #f0f0f0;
          cursor: pointer;
          user-select: none;
      }

      .button-like.disabled {
          background-color: #ccc;
          cursor: not-allowed;
      }
  </style>
</head>
<body>

<div class="example">
  <h3>Buttons</h3>
  <div class="button-like" data-button="1">Button 1</div>
  <div class="button-like" data-button="2">Button 2</div>
  <div class="button-like disabled" data-button="3" style="opacity: 0.3">Button 3</div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var buttons = document.getElementsByClassName('button-like');

        for (var i = 0; i < buttons.length; i++) {
            buttons[i].addEventListener('click', function () {
                if (this.classList.contains('disabled')) return;

                var button = this;
                button.classList.add('disabled');
                button.textContent = 'Wait 5 seconds...';

                var secondsLeft = 5;
                var interval = setInterval(function () {
                    button.textContent = 'Wait ' + (--secondsLeft) + ' seconds...';
                    if (secondsLeft <= 0) {
                        clearInterval(interval);
                        button.classList.remove('disabled');
                        button.textContent = 'Button ' + button.getAttribute('data-button');
                    }
                }, 1000);
            });
        }
    });
</script>

</body>
</html>
